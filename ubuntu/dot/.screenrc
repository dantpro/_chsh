#
#caption always "%{= 45}%{+b w}Screen: %n | %h %=%t %c"
#hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
#
#hardstatus alwayslastline '%{= wk}%?%-Lw%?%{r}(%{k}%n*%f%t%?(%u)%?%{r})%{k}%?%+Lw%?%?%= %m/%d %C%A'

# http://www.debian-administration.org/articles/560
#caption     always        "%{+b rk}%H%{gk} |%c %{yk}%d.%m.%Y | %72=Load: %l %{wk}"
#hardstatus alwayslastline "%?%{yk}%-Lw%?%{wb}%n*%f %t%?(%u)%?%?%{yk}%+Lw%?"

# logging
#deflog on
logfile $HOME/logs/screen_%Y-%m-%d_%0c_%n.log

# starting windows
chdir					# goto homedir
screen -t bash 1 bash
screen -t subash 2 sudo bash
screen -t mc 3 mc
screen -t sumc 4 sudo mc
chdir /var/log				# goto logsr
screen -t logs 5
select 3

